\author{Benjamin}
\title{Colle de mathématiques n°8 - sujet 1}
\date{17 novembre 2020}

\begin{document}

\maketitle

\begin{exercise}[subtitle=angle moitié]
\vskip0.2cm
Soit $a\in]0,\pi[$.
\vskip0.2cm
Ecrire sous forme exponentielle le nombre complexe
$z=1+e^{ia}$
\end{exercise}

\begin{exercise}[subtitle= racines $n$-ièmes]
\vskip0.2cm
Résoudre l'équation :
$ z^5=\frac{(1+i\sqrt 3)^4}{(1+i)^2}$
\end{exercise}

\begin{exercise}[subtitle= partie entière décalée]
\vskip0.2cm
Soit $x$ un nombre réel.

\vskip0.3cm

Démontrer que $\lfloor x\rfloor+\left\lfloor x+\frac 12\right\rfloor=\lfloor 2x\rfloor$.
\end{exercise}

\end{document}
